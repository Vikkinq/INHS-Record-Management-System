rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Files collection
    match /files/{fileId} {
      allow read, write: if request.auth != null;
    }

    // Users collection
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
